    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!----- Bootstrap END ----->

    <%= javascript_include_tag 'application' %>
    <%= stylesheet_link_tag 'application', :media =>"all"  %>
    </head>
<body>
    <!----- ヘッダー ----->
<header>
    <div class="container-fluid header-container">
        <a href="/"><%= image_tag("icon_white", :style => "width:70px; height:70px; text-align:left") %></a>
        <div class = "header_left">
        <a href="/"><div id="name1">TABEEGO</div></a>
        <a href="/"><div id="name2">旅行者が作る情報共有サービス</div></a>
        </div>

        <div class = "header_right">
            <% if(logged_in?) %>
                <%= link_to "Log out", controller: :top, action: :logout %>
            <% else %>
                <a id="sign_up" href="/register">Sign up</a>
                <a id="log_in" href="/login/">Log in</a> 
            <% end %>
        </div>
    </div>

    <nav id="gNav">
            <ul style="list-style:none;">
                <li class="current-menu-item"><a href="">Home</a></li>
                <li><a href="/area/">地域一覧</a></li>
                <li><a >話題の質問</a></li>
                <li><a href="">話題の旅行先</a></li>
                <li><a href="/profile/">プロフィール</a></li>
            </ul>
    </nav>

</header>
<!----- ヘッダー END ----->

<%= yield %>

<!----- フッター ----->
<footer>
<div class="container-fluid">
    <div>
        <p>©Copyright2018 TABEEGO, All rights reserved.</p>
    </div>
</div>
</footer>
