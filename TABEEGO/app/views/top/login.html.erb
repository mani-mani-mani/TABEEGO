<h1>ユーザーログイン</h1>

<% if flash[:error_message] %>
    <div><%= flash[:error_message] %></div>
<% end %>

<%= form_tag("/login", method: :post) do %>
    <%= label_tag "ユーザー名" %>
    <%= text_field_tag :username %> </br>
    <%= label_tag "パスワード" %>
    <%= password_field_tag :password%></br>
    <%= submit_tag "送信" %>
<% end %>