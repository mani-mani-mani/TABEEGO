<% @questions.each do |q| %>
    <h1><%= q.title%></h1>

    <span><%= link_to q.detail, {controller: :questions, action: :detail, area: params[:area], country: params[:country], city: params[:city], question_id: q.id} %></span>
<% end %>


<div style="border:double 10px;margin:20px;">
    <%= form_for @add, :method => :post, :url => {controller: :questions, action: :create, area: params[:area], country: params[:country], city: params[:city]} do |q|%>
        <div>
            <%= q.label :title, "タイトル" %>
            <%= q.text_field :title %>
        </div>
        <div>
            <%= q.label :detail, "詳細" %>
            <%= q.text_field :detail %>
        </div>
        <div>
            <%= q.submit "送信" %>
        </div>

    <% end%>
</div>